<%= form_with(model: project, local: true) do |form| %>
<div class="container rounded bg-white">
    <div class="row">  
      <% if project.errors.any? %>
      <div class="container ml-3">
        <% project.errors.full_messages.each do |message| %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong><%= message %></strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% end %>
        </div>
      <% end %>
        <div class="col-md-12 border-right">
            <div class="p-3 py-1">
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Project Name</label><%= form.text_field :project_name , {:class => "form-control"} %></div>
                    <div class="col-md-6"><label class="labels">Project Status</label><%= form.text_field :status, {:class => "form-control"} %></div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">duration</label><%= form.number_field :duration , {:class => "form-control"} %></div>
                    <div class="col-md-6"><label class="labels">Assigned To</label><%= form.text_field :employee_id, {:class => "form-control"} %></div>
                </div>                
                <div class="mt-5 text-center"><%= form.submit "Save Details", {:class => "btn btn-primary profile-button"} %></div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
<% end %>
