<%= form_with(model: employee, local: true) do |form| %>
<div class="container rounded bg-white">
    <div class="row">  
      <% if employee.errors.any? %>
        <div class="container ml-3">
        <% employee.errors.full_messages.each do |message| %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong><%= message %></strong> 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          
          <% end %>
        </div>
      <% end %>
        <div class="col-md-12 border-right">
            <div class="p-3">
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Name</label><%= form.text_field :name , {:class => "form-control"} %></div>
                    <div class="col-md-6"><label class="labels">Email</label><%= form.text_field :email, {:class => "form-control"} %></div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Age</label><%= form.number_field :age , {:class => "form-control"} %></div>
                    <div class="col-md-6"><label class="labels">Phone</label><%= form.number_field :phone, {:class => "form-control"} %></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Designation</label><%= form.text_field :designation, {:class => "form-control"} %></div>
                </div>
                
                <div class="mt-5 text-center"><%= form.submit "Save Details", {:class => "btn btn-primary profile-button"} %></div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
<% end %>
